{
  "info": {
    "name": "春节红包雨活动测试 (Postman)",
    "description": "基于 examples/example_ad_campaign_test.md 的接口测试集合。",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "红包活动",
      "item": [
        {
          "name": "领取红包 - 正常",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{user_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"activity_id\": \"spring_2025\"}"
            },
            "url": {
              "raw": "{{base_url}}/redpacket/claim",
              "host": ["{{base_url}}"],
              "path": ["redpacket", "claim"]
            },
            "description": "TC-001: 用户首次领取红包"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test(\"Amount is valid\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data.amount).to.be.above(0);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "领取红包 - 重复领取 (幂等)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{user_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"activity_id\": \"spring_2025\"}"
            },
            "url": {
              "raw": "{{base_url}}/redpacket/claim",
              "host": ["{{base_url}}"],
              "path": ["redpacket", "claim"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Already claimed\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.code).to.eql(1001);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "https://api.example.com/v1",
      "type": "string"
    },
    {
      "key": "user_token",
      "value": "mock_token_123",
      "type": "string"
    }
  ]
}
